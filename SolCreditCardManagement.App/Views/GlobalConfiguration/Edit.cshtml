@model SolCreditCardManagement.App.Models.GlobalConfigurationViewModel

@{
    ViewData["Title"] = "Edit GlobalConfiguration";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<h1>Editar configuracion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <label asp-for="Id" class="form-control" ></label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfigurationVal" class="control-label"></label>
                <input asp-for="ConfigurationVal" class="form-control" />
                <span asp-validation-for="ConfigurationVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@if (ViewBag.IsSuccess is not null && ViewBag.IsSuccess)
{
    <script>
        Swal.fire({
            title: 'Éxito',
            text: 'La configuracion se ha guardado exitosamente.',
            icon: 'success',
            confirmButtonText: 'Aceptar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("Index", "GlobalConfiguration")';
            }
        });
    </script>
}
else if (ViewBag.IsSuccess is not null)
{
    <script>
        Swal.fire({
            title: 'Error',
            text: 'Ha ocurrido un error al guardar la configuracion.',
            icon: 'error',
            confirmButtonText: 'Aceptar'
        });
    </script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
